@model DejaVu.Models.Employee
<div class="employee-list-item">
    <tr style="background-color: @((@Model.Id % 2 == 0) ? "#ccc" : "#eee");">
        <td>@Model.Name</td>
        <td>@Model.Surname</td>
        <td>@Model.BirthDate.ToString("MM/dd/yyyy")</td>
        <td>@Model.Position</td>

        <td>
            <item-link controller-name="Employee" action-name="Details" item-id="@Model.Id" display-text="Details"></item-link>
            <item-link controller-name="Employee" action-name="Edit" item-id="@Model.Id" display-text="Edit"></item-link>
            <item-link controller-name="Employee" action-name="Update" item-id="@Model.Id" display-text="Update"></item-link>
        </td>
    </tr>
</div>
